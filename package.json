{
  "name": "modern-art-gallery",
  "version": "1.0.0",
  "description": "Customize and develop the design",
  "browserslist": "last 10 versions",
  "main": "index.js",
  "scripts": {
    "watch-sass": "sass --no-source-map --watch scss/main.scss css/style.css",
    "compile-sass": "sass --no-source-map scss/main.scss css/main.css",
    "prefix-css": "postcss css/main.css --use autoprefixer -o css/style.css  --no-map",
    "liveserver": "live-server",
    "start": "npm-run-all --parallel liveserver watch-sass",
    "build": "npm-run-all compile-sass prefix-css"
  },
  "author": "Denis Dindar.",
  "license": "MIT"
}
